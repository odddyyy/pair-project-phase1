<%- include('partials/header', { title: 'Home'}) %>
<%- include('partials/navbarAdmin', { page: 'Home'}) %>
<div class="container mt-5">
    <div class="row">
        <div class="col">
            <form action="/foods/edit/<%= data.id %>" method="POST">
                <div class="form-group">
                  <label for="name">Name </label>
                  <input type="text" class="form-control" name="name" value="<%= data.name %>">
                </div>
                <div class="form-group">
                  <label for="stock">Stock</label>
                  <input type="number" class="form-control" name="stock" value="<%= data.stock %>">
                </div>
                <div class="form-group">
                  <label for="stock">Price</label>
                  <input type="number" class="form-control" name="price" value="<%= data.price %>">
                </div>
                <div class="form-group">
                    <select name="group">
                        <option <%= data.group === 'Entree' ? 'selected' : '' %>>Entree</option>
                        <option <%= data.group === 'Main Course' ? 'selected' : '' %>>Main Course</option>
                        <option <%= data.group === 'Dessert' ? 'selected' : '' %>>Dessert</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Edit</button>
              </form>
        </div>
    </div>
</div>
<%- include('partials/footer') %>